<main class="main">
  <div class="inner">
    <% if user_signed_in? %>
      <div class="greeting">
        Welcome
        <%= link_to "#{current_user.nickname}", user_path(current_user.id), class: :greeting__link %>
      </div>
    <%end%>
    <%= form_with(url: search_articles_path, local: true, method: :get, class: "search-form") do |form| %>
      <%= form.text_field :keyword, placeholder: "Search for a country", class: "search-input" %>
      <%= form.submit "Search", class: "search-btn" %>
    <% end %>
    <div class="card__wrapper">
      <%= render partial: 'article', collection: @articles %>
    </div>
  </div>
</main>
