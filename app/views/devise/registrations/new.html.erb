<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">Sign up</h2>

      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <div class="field">
          <%= f.label :nickname %><br />
          <%= f.text_field :nickname, autofocus: true, class: :form__nickname %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: :form__email %>
        </div>

        <div class="field">
            <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(Password length must be <%= @minimum_password_length %> characters or longer)</em>
          <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: :form__password %>
        </div>

        <div class="actions">
          <%= f.submit "Signup", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>