<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">Log in</h2>

        <%= form_with model: @user, url: user_session_path, local: true do |f| %>

        <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: :form__email %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", class: :form__password %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.label :remember_me %><br />
          <%= f.check_box :remember_me %>
        </div>
      <% end -%>

        <div class="actions">
          <%= f.submit "Login", class: :form__btn %>
        </div>
      <% end %>
    </div>
  </div>
</div>